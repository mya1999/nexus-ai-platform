  "tabnine.disable_file_regex": [],
  "workbench.startupEditor": "none",
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,

  // Ø§Ù„ØªØ¯Ù‚ÙŠÙ‚ Ø§Ù„Ø¥Ù…Ù„Ø§Ø¦ÙŠ - ØªØ¬Ø§Ù‡Ù„ Ø§Ù„ÙƒÙ„Ù…Ø§Øª Ø§Ù„Ø¹Ø±Ø¨ÙŠØ© ÙˆØ§Ù„ØªÙ‚Ù†ÙŠØ©
  "cSpell.enabled": true,
  "cSpell.language": "en,ar",
  "cSpell.words": [
    "nexus",
    "vercel",
    "dependabot",
    "codeql",
    "pylance",
    "tabnine",
    "gitignore",
    "prettierrc",
    "tsconfig",
    "eslintrc",
    "autofix",
    "autobuild"
  ],
  "cSpell.enabledFileTypes": {
    "markdown": true,
    "typescript": true,
    "javascript": true,
    "yaml": true
  },

  // ØªØ­Ø³ÙŠÙ† Ø§Ù„Ø£Ø¯Ø§Ø¡
  "extensions.ignoreRecommendations": false,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true
  },
